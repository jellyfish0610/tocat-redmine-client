<div class="contextual">
  <%= link_to l(:button_split), '', :class => 'icon icon-edit' %>
  <%= link_to l(:button_complete), '', :class => 'icon icon-time-add' %>
  <%= link_to l(:button_edit), "edit_order_path(@order)", :onclick => 'showAndScrollTo("update", "issue_notes"); return false;', :class => 'icon icon-edit' if @order.editable? %>
  <%= link_to l(:button_delete), '', :data => {:confirm => 'issues_destroy_confirmation_message(@issue)'}, :method => :delete, :class => 'icon icon-del' %>
</div>
