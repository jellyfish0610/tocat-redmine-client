

<h2>
<% if @user.is_a? User %> <%= avatar @user, :size => "50" %> <% end %>
<%= h @user.name %>
<%= link_to l(:salary_check_in), new_salary_path(user_id: params[:user_id]), class: "tocat-button" if User.current.tocat_allowed_to?(:salary_check_in) && params[:user_id].present? %>
<%= link_to l(:correct_balance), new_correction_path(user_id: params[:user_id]), class: "tocat-button" if User.current.tocat_allowed_to?(:correct_balance) && params[:user_id].present? %>
</h2>
<hr/>

<% unless @user_tocat.coach? || @user_tocat.tocat_server_role.name == 'Manager' %>
<div class="splitcontentleft">
    <label><%=	l(:label_balance)  %></label><strong> $<%= @user_tocat.balance_account_state.round(2)%></strong><br/>
    <%= render 'transactions', :transactions => @balance_transactions %>
    <label><%=	l(:label_payment_balance)  %></label><strong> $<%= @user_tocat.income_account_state.round(1) %></strong><br/>
    <%= render 'transactions', :transactions => @income_transactions %>
</div>
<div class="splitcontentright">
      <br/>
      <label><%=	l(:label_not_accepted_issues)  %> <strong>$<%= @not_accepted_tasks.sum(&:budget).round(1) %> </strong> </label>
      <%= render 'issues', :issues => @not_accepted_tasks, :accepted => 0 %>
      <label><%=	l(:label_accepted_issues)  %> <strong>$<%= @accepted_tasks.sum(&:budget).round(1) %> </strong> </label>
      <%= render 'issues', :issues => @accepted_tasks, :accepted => 1, :balance => @accepted_tasks.sum(&:budget).round(1) %>
</div>
<div style="clear:both;"></div>

<% html_title "TOCAT : My dashboard" %>

  <hr/>
  <div class='chart_container'>
    <fieldset>
      <legend>Personal dynamics</legend>
      <div style="text-align: center; width: 100%">
        <img src="<%= zoho_chart_prev_quarter_url(@user_tocat) %>" style="width: 45%">
        <img src="<%= zoho_chart_this_quarter_url(@user_tocat) %>" style="width: 45%">
      </div>
    </fieldset>
  </div>

<% else %>
<% if @user_tocat.coach? %>
<img src='<%=RedmineTocatClient.settings[:zoholink]%>%27<%=@user_tocat.login%>%27'> </img>
<% else %>
Please visit <a href='http://reports.zoho.com'> ZohoReports </a> for information  <a href='http://reports.zoho.com'> http://reports.zoho.com </a>
<% end %>
<% end %>
