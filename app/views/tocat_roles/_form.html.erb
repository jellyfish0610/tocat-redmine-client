<%= error_messages_for 'tocat_role' %>

<div class="box tabular">
<p><%= f.text_field :name, :required => true %></p>
</div>

<h3><%= l(:label_permissions) %></h3>
<div class="box tabular" id="permissions">
  <fieldset><legend>TOCAT Premissions</legend>
  <% @permissions.each do |permission| %>
      <label class="floating">
      <%= check_box_tag 'tocat_role[permissions][]', permission, (@role.permissions.include? permission) %>
      <%= l_or_humanize(permission, :prefix => 'permission_') %>
      </label>
  <% end %>
  </fieldset>
<br /><%= check_all_links 'permissions' %>
<%= hidden_field_tag 'tocat_role[permissions][]', '' %>
</div>
