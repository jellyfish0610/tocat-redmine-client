<div class="contextual">
  <%= (link_to l(:button_split), new_order_path(split: @order.id), :class => 'icon icon-edit' unless @order.parent) if User.current.tocat_allowed_to?(:split_orders) %>
  <%= (link_to l(:button_complete), '', :class => 'icon icon-time-add' unless @order.parent) if User.current.tocat_allowed_to?(:complete_orders) %>
  <%= link_to l(:button_edit), edit_order_path(@order), :onclick => 'showAndScrollTo("update", "issue_notes"); return false;', :class => 'icon icon-edit' if User.current.tocat_allowed_to?(:edit_orders) %>
  <%= (link_to l(:button_delete), '', :data => {:confirm => l(:confirm_order_destroy)}, :method => :delete, :class => 'icon icon-del' unless @order.sub_orders.present?) if User.current.tocat_allowed_to?(:delete_orders) %>
</div>
