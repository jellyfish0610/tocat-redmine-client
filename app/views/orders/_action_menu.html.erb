<div class="contextual">
  <%= link_to l(:button_split), new_order_path(split: @order.id), :class => 'icon icon-edit' unless @order.parent  %>
  <%= link_to l(:button_complete), '', :class => 'icon icon-time-add' unless @order.parent %>
  <%= link_to l(:button_edit), edit_order_path(@order), :onclick => 'showAndScrollTo("update", "issue_notes"); return false;', :class => 'icon icon-edit' if @order.editable? %>
  <%= link_to l(:button_delete), '', :data => {:confirm => l(:confirm_order_destroy)}, :method => :delete, :class => 'icon icon-del' unless @order.sub_orders.present? %>
</div>
